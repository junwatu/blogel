{
  "name": "blogel",
  "version": "0.3.0-alpha",
  "description": "Static page generator with editor",
  "repository": {
    "type": "git",
    "url": "https://github.com/junwatu/blogel.git"
  },
  "engines": {
    "iojs": ">=2.3.0",
    "node": ">=0.12.0"
  },
  "os": [
    "darwin",
    "linux"
  ],
  "private": true,
  "scripts": {
    "start": "node --harmony --harmony_arrow_functions blogel.js --use-babel",
    "dev": "npm run transpile-all && npm start",
    "build": "npm run copy && npm run build-css && npm run-build-js",
    "build-css": "npm run sass-to-css && scripts/cat-css.sh | cleancss -o public/css/bundle.min.css",
    "build-js": "browserify public/js/blogelweb.js | uglifyjs -mc > public/js/bundle.min.js",
    "copy": "scripts/copy-assets.sh",
    "sass-to-css": "sass scss/blogel.scss public/css/blogel.css",
    "transpile-all": "scripts/recurse.sh",
    "watch": "echo TODO",
    "watch-css": "onchange scss/blogel.scss -- npm run build-css",
    "watch-js": "echo TODO",
    "flow-check": "echo 'flow check...' && flow",
    "watch-flow": "onchange 'server/*.js' 'server/**/*.js' -- npm run flow-check"
  },
  "keywords": [
    "generator",
    "page",
    "static",
    "static page",
    "static page editor",
    "static page generator"
  ],
  "author": "Equan Pr. <byte@equan.me> (http://equan.me)",
  "dependencies": {
    "babel-core": "^5.7.4",
    "babel-runtime": "^5.7.0",
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.0.2",
    "commander": "~2.1.0",
    "connect-flash": "~0.1.1",
    "consolidate": "~0.10.0",
    "cookie-parser": "^1.0.1",
    "express": "~4.1.2",
    "express-session": "^1.0.4",
    "github": "~0.1.12",
    "handlebars": "~1.3.0",
    "medium-editor": "^5.4.0",
    "method-override": "^1.0.0",
    "mkdirp": "^0.5.1",
    "moment": "~2.5.1",
    "nconf": "~0.6.9",
    "nedb": "~0.10.0",
    "passport": "~0.2.0",
    "passport-local": "~0.1.6",
    "rethinkdb": "^2.0.2",
    "temp": "^0.8.3",
    "uglify-js": "^2.4.23",
    "winston": "~0.7.2"
  },
  "devDependencies": {
    "clean-css": "^3.3.6",
    "node-sass": "^3.2.0",
    "onchange": "^1.1.0"
  },
  "license": "MIT"
}
